
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  attempts  Attempt[]
  score     Int      @default(0)
}

model Word {
  id        String   @id @default(cuid())
  he        String
  en        String
  topic     String
  level     Int
  createdAt DateTime @default(now())
  attempts  Attempt[]
}

model Attempt {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  word      Word     @relation(fields: [wordId], references: [id])
  wordId    String
  correct   Boolean
  timeMs    Int
  level     Int
  createdAt DateTime @default(now())
}
